<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Course Reports</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script>
            window.addEventListener('pageshow', function(event) {
        if (event.persisted) {
            window.location.reload();
        }
    });
    </script>
    
</head>

<body class="bg-gray-100">
    <div class="flex flex-col items-center justify-center min-h-screen bg-gray-100">

        <h1 class="text-2xl font-bold mb-4">Course Reports</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% course.forEach((course)=>{ %>
                <% const usercourseCount = usercourseCounts.find(item => item.courseId === course.id); %>
            <div class="bg-white rounded-lg shadow-md p-4">
                <h2 class="text-lg font-semibold mb-2"><%= course.dataValues.title %></h2>
            <p class="text-gray-600">Enrollment Count: <%= usercourseCount ? usercourseCount.count : 0 %></p>
            </div>
            <% }) %>
    </div>
    </div>
</body>

</html>
